<div class="header"><h1>All available Plants</h1>
 </div>
<div class="all_plants">

  <div class="row">
    <div class="filter">
      <div class="filter_header">
        <h4>Filter</h4>
        <h6>reset</h6>
      </div>

      <div class="filter_form">
        <div class="filter_attributes">
          <h4 class="attribute">Care Level</h4>
          <p>▼</p>
        </div>
        <div class="filter_attributes">
        <h4 class="attribute">Type</h4>
          <p>▼</p>
        </div>
        <div class="filter_attributes">
          <h4 class="attribute">Plant Height</h4>
          <p>▼</p>
        </div>
        <div class="filter_attributes">
          <h4 class="attribute">Price</h4>
          <p>▼</p>
        </div>
    </div>
  </div>


  <div class="plant_cards">
      <div class="sort_header">
          <div><p><strong>...results</strong></p></div>
        <div class="dropdown">
            <button class="drop btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          Sort by
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Sort by: price(high to low)</a></li>
            <li><a class="dropdown-item" href="#">Sort by: price(low to high)</a></li>
            <li><a class="dropdown-item" href="#">Sort by: Newest</a></li>
          </ul>
        </div>
    </div>

      <div class="card_row">
        <div class="card_plants">
            <% @plants.each do |plant| %>
              <% if plant.image_url.attached? %>
              <%= cl_image_tag plant.image_url.key, height: "300", width: "300px" %>
            <% else %>
              <p><em><%= "no image available" %></em></p>
            <% end %>
            <p><%= link_to plant.name, plant_path(plant) %></p>
            <p><%= plant.description %></p>
            <p><%= plant.price %>$  </p>
            <button class="bag btn-primary" type="button">Add to Bag</button>
            <% end %>
           </div>
      </div>
  </div>

</div>



 <p><%= link_to "new plant", new_plant_path %></p>
