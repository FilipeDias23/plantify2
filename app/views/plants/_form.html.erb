<%= simple_form_for @plant do |p| %>
  <%= p.input :name %>
  <%= p.input :plant_type %>
  <%= p.input :price %>
  <%= p.input :care_level, as: :numeric, :input_html => { min: '0', max: '3', step: '1' } %>
  <%= p.input :location %>
  <%= p.input :photo, as: :file %>
  <%= p.input :description, as: :text, :input_html => { :rows => 5 } %>
  <%= p.submit %>
<% end %>
