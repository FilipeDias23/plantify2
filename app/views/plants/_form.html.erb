<%= simple_form_for @plant do |p| %>
  <%= p.input :name %>
  <%= p.input :plant_type, as: :radio_buttons, collection: ['Cactus',
                                                            'Rose',
                                                            'Orchidea',
                                                            'Tree',
                                                            'Vegetable'] %>
  <%= p.input :price, as: :numeric %>
  <%= p.input :care_level, collection: 0..3, prompt: "Select plant's level of maintenance", selected: 0 %>
  <%= p.input :location %>
  <%= p.input :image, as: :file %>
  <%= p.input :description, as: :text, :input_html => { :rows => 3 } %>
  <%= p.submit %>
<% end %>
